{
  "name": "blog-api",
  "version": "1.0.0",
  "description": "Blog API with authentication and PostgreSQL",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "watch": "tsc -w",
    "serve": "nodemon dist/app.js",
    "devStart": "nodemon --exec ts-node src/app.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js -d src/config/database.ts",
    "migration:create": "typeorm migration:create",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "keywords": [
    "blog",
    "api",
    "express",
    "postgres",
    "jwt",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "typeorm": "^0.3.24",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@babel/node": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
